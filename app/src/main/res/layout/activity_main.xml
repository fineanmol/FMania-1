<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/gym"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text=" FMania"
            android:layout_width="341dp"
            android:layout_height="128dp" tools:layout_editor_absoluteY="86dp"
            android:id="@+id/textView" android:textStyle="bold"
            android:textColor="#BEBEBE" android:textSize="80sp" app:fontFamily="serif"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/imageView6" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView6" tools:ignore="MissingConstraints"/>
    <Button
            android:text="GET STARTED"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/getStartedbtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/custom_button"
            android:textColor="@android:color/white" style="@android:style/Widget.Material.Light.Button.Toggle"
            android:textSize="24sp" android:textStyle="bold" android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0" tools:targetApi="lollipop"/>

</android.support.constraint.ConstraintLayout>