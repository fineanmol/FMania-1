<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:layout_width="388dp"
            android:layout_height="63dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/nameupdate"
            android:hint="Enter Name" android:layout_marginTop="232dp"
            app:layout_constraintTop_toBottomOf="@+id/editemail" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="388dp"
            android:layout_height="63dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/numberupdate"
            android:hint="Enter Number" android:layout_marginTop="412dp"
            app:layout_constraintTop_toBottomOf="@+id/editemail" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.304"/>
    <EditText
            android:layout_width="394dp"
            android:layout_height="63dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="79dp" tools:layout_editor_absoluteX="8dp" android:id="@+id/editemail"
            android:hint="Enter Email" tools:ignore="MissingConstraints"/>
    <EditText
            android:layout_width="388dp"
            android:layout_height="63dp"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteX="7dp" android:id="@+id/editpass"
            android:hint="Enter Password" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/editemail" tools:ignore="MissingConstraints"/>
    <EditText
            android:layout_width="388dp"
            android:layout_height="63dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/numberupdate"
            android:hint="Enter Dob" android:layout_marginTop="320dp"
            app:layout_constraintTop_toBottomOf="@+id/editemail" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.304"/>

</androidx.constraintlayout.widget.ConstraintLayout>