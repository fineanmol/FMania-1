<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".who">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/gym"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text=" FMania"
            android:layout_width="326dp"
            android:layout_height="114dp" tools:layout_editor_absoluteY="82dp"
            android:id="@+id/textView" android:textStyle="bold"
            android:textColor="#BEBEBE" android:textSize="80sp" app:fontFamily="serif"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Who you are?"
            android:layout_width="273dp"
            android:layout_height="52dp"
            android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:fontFamily="@font/aclonica" android:textSize="36sp" android:textColor="@android:color/white"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="Zym Owner"
            android:layout_width="288dp"
            android:layout_height="0dp"
            android:id="@+id/ownerLogin" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.507" android:layout_marginTop="24dp"
            android:background="@drawable/custom_button" android:textColor="@android:color/white"
            android:textSize="24sp" android:textStyle="bold"/>
    <Button
            android:text="Fitness Freak"
            android:layout_width="291dp"
            android:layout_height="0dp"
            android:id="@+id/userLogin" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/ownerLogin" android:layout_marginTop="32dp"
            android:background="@drawable/custom_button" android:textColor="@android:color/white"
            android:textSize="24sp" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>