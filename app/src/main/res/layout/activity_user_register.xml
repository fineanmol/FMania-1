<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userRegisterActivity"
android:background="@drawable/gym">

    <ProgressBar
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:layout_centerInParent="true"
            app:layout_editor_absoluteX="180dp"
            app:layout_editor_absoluteY="380dp"
            android:layout_width="45dp"
            android:layout_height="34dp" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="380dp"
            tools:layout_editor_absoluteX="180dp"/>

    <ImageView
            android:src="@drawable/userlogo"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginTop="12dp"
            android:id="@+id/textView5" android:textStyle="bold"
            android:textColor="#BEBEBE"
            android:textAllCaps="false"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:id="@+id/register_title2"
            android:layout_width="331dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="Account Registration"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <LinearLayout
            android:layout_width="415dp"
            android:layout_height="726dp"
            android:layout_below="@+id/register_title"
            android:background="#4AFFFFFF"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
                android:layout_width="308dp"
                android:layout_height="558dp"
                android:layout_marginLeft="25dp"
                android:orientation="vertical"
                android:layout_marginTop="105dp"
                android:paddingTop="30dp">

            <TextView
                    android:labelFor="@id/numberupdate"
                    android:text="Name"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#FFFFFF"/>

            <EditText
                    android:id="@+id/numberupdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:layout_marginBottom="10dp"
                    android:hint="John Phill"
                    android:inputType="textPersonName" android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"/>
            <TextView
                    android:labelFor="@id/u_r_email"
                    android:text="Email"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#FFFFFF"/>

            <EditText
                    android:id="@+id/u_r_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:layout_marginBottom="10dp"
                    android:hint="john@gmail.com"
                    android:inputType="textEmailAddress" android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"/>
            <TextView
                    android:labelFor="@id/mobile"
                    android:text="Mobile Number"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#FFFFFF"/>
            <EditText
                    android:drawablePadding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/mobile"
                    android:drawableLeft="@drawable/ic_lock"
                    android:hint="9876543210"
                    android:inputType="number" android:textColor="#FFFFFF" android:textColorHint="#FFFFFF"/>

            <TextView
                    android:labelFor="@id/dob"
                    android:text="DOB"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#FFFFFF"/>

            <EditText
                    android:drawablePadding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/dob"
                    android:drawableLeft="@drawable/ic_lock"
                    android:hint="20/04/1997"
                    android:inputType="datetime" android:textColor="#FFFFFF" android:textColorHint="#FFFFFF"/>

            <TextView
                    android:labelFor="@id/u_r_pass"
                    android:text="password"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#FFFFFF"/>

            <EditText
                    android:drawablePadding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/u_r_pass"
                    android:drawableLeft="@drawable/ic_lock"
                    android:hint="Password"
                    android:inputType="textPassword" android:textColor="#FFFFFF" android:textColorHint="#FFFFFF"/>
            <Button
                    android:id="@+id/u_register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:background="#272626"
                    android:text="REGISTER"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18sp"/>

            <TextView
                    android:id="@+id/u_r_login"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Already a member? Login"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:textSize="16dip"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>