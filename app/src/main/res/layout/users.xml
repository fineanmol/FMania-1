<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="395dp"
            android:layout_height="44dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/email"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:text="TextView"
            android:layout_width="394dp"
            android:layout_height="54dp"
            tools:layout_editor_absoluteX="6dp" android:id="@+id/pass"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/email"
            tools:ignore="MissingConstraints"/>
    <Button
            android:text="Update"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            tools:layout_editor_absoluteX="6dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/pass" tools:ignore="MissingConstraints"/>
    <Button
            android:text="Delete"
            android:layout_width="395dp"
            android:layout_height="wrap_content" android:id="@+id/delete"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/update" tools:ignore="MissingConstraints"/>
</android.support.constraint.ConstraintLayout>