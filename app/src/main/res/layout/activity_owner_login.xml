<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ownerLoginActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/gym"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="  FMania"
            android:layout_width="0dp"
            android:layout_height="150dp" tools:layout_editor_absoluteY="91dp"
            android:id="@+id/textView5" android:textStyle="bold"
            android:textColor="#2979FF" android:textSize="100sp" app:fontFamily="cursive"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:text="Owner's Login"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView7" app:fontFamily="@font/aclonica"
            android:textSize="30sp" android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
</android.support.constraint.ConstraintLayout>