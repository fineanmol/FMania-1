<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ownerLoginActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/gym"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text=" FMania"
            android:layout_width="341dp"
            android:layout_height="128dp" tools:layout_editor_absoluteY="74dp"
            android:id="@+id/textView2" android:textStyle="bold"
            android:textColor="#BEBEBE" android:textSize="80sp" app:fontFamily="serif"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="Owner's Login"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView7" app:fontFamily="@font/aclonica"
            android:textSize="30sp" android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            tools:layout_editor_absoluteY="301dp" tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>